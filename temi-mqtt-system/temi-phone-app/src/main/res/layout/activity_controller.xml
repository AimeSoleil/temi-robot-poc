<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zeelo Location"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MQTT: Disconnected"
            android:textSize="16sp"
            android:textColor="#FF5722"
            android:layout_marginBottom="16dp" />

        <!-- Zeelo SDK Location Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zeelo Location (SDK Callback)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/zeeloLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Waiting for Zeelo SDK..."
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnToggleAutoPublish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Auto-Publish"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginBottom="24dp" />

        <!-- Manual Location Input Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Location"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitude (e.g. 22.250763)"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editLongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitude (e.g. 113.565228)"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editHkE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HK1980 Easting (e.g. 773218.82)"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editHkN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="HK1980 Northing (e.g. 812570.95)"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/editFloor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Floor level (e.g. 0)"
            android:inputType="numberSigned"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSendManualLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Manual Location" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp" />

        <!-- Status / Log -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Idle"
            android:textSize="13sp"
            android:textColor="#999999"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>
</ScrollView>
